@model LoginDemoApp.Models.Employee

@using(@Html.BeginForm("Index","Home",FormMethod.Post))
{
<table cellpadding="10" border="1" align="center">
    <tr align="center">
        <td colspan="2"><h2>Login App</h2></td>
    </tr>
    <tr>
        <td>Enter Username :</td>
        <td>@Html.EditorFor(x => x.Username)
            <br />@Html.ValidationMessageFor(x => x.Username,"",new { style="color:Red;"})
        </td>
    </tr>
    <tr>
        <td>Enter Password :</td>
        <td>@Html.PasswordFor(x => x.Password)
            <br />@Html.ValidationMessageFor(x => x.Password, "", new { style = "color:Red;" })
        </td>
    </tr>
    <tr align="center">
        <td colspan="2"><input type="submit" value="Login"/></td>
    </tr>
</table>
}