@model  IEnumerable<EmployeeMVCApp.Models.Employee>

<h2 align="center">Employee Details</h2>
@using (Html.BeginForm("AddEmployee","Employee"))
{
    <table cellpadding="10" align="center" border="1">
        <tr align="center">
            <td colspan="4">@Html.ActionLink("Add New Employee", "AddEmployee","Employee")</td>
        </tr>
        <tr>
            <th>Employee ID</th>
            <th>Name</th>
            <th>Designation</th>
            <th>Salary</th>
        </tr>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.ID</td>
                <td>@emp.Name</td>
                <td>@emp.Designation</td>
                <td>@emp.Salary</td>
            </tr>
        }
    </table>
}