@model EmployeeMVCApp.ViewModels.EditEmployeeVM

<h2 align="center">Edit Employee</h2>
@using (Html.BeginForm())
{
    <table cellpadding="10" align="center" border="1">
        @Html.HiddenFor(x => x.Employee.ID)
        <tr>
            <th>Enter Name :</th>
            <td>
                @Html.EditorFor(x => x.Employee.Name)
                <br />
                @Html.ValidationMessageFor(x => x.Employee.Name, "", new { style = "color:red;" })
            </td>
        </tr>
        <tr>
            <th>Enter Designation :</th>
            <td>
                @Html.EditorFor(x => x.Employee.Designation)
                <br />
                @Html.ValidationMessageFor(x => x.Employee.Designation, "", new { style = "color:red;" })
            </td>
        </tr>
        <tr>
            <th>Enter Salary :</th>
            <td>
                @Html.EditorFor(x => x.Employee.Salary)
                <br />
                @Html.ValidationMessageFor(x => x.Employee.Salary, "", new { style = "color:red;" })
            </td>
        </tr>
        <tr align="center">
            <td colspan="2"><input type="submit" value="Edit Employee" /></td>
        </tr>
    </table>
}