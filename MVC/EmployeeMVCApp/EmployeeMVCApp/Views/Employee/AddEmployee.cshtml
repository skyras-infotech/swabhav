@model EmployeeMVCApp.ViewModels.AddEmployeeVM

<h2 align="center">Employee Details</h2>
@using (Html.BeginForm()) 
{
<table cellpadding="10" align="center" border="1">
    <tr>
        <th>Enter ID :</th>
        <td>
            @Html.EditorFor(x => x.ID)
            <br />
            @Html.ValidationMessageFor(x => x.ID, "", new { style = "color:red;" })
        </td>
    </tr>
    <tr>
        <th>Enter Name :</th>
        <td>
            @Html.EditorFor(x => x.Name)
            <br />
            @Html.ValidationMessageFor(x => x.Name, "", new { style = "color:red;" })
        </td>
    </tr>
    <tr>
        <th>Enter Designation :</th>
        <td>
            @Html.EditorFor(x => x.Designation)
            <br />
            @Html.ValidationMessageFor(x => x.Designation, "", new { style = "color:red;" })
        </td>
    </tr>
    <tr>
        <th>Enter Salary :</th>
        <td>
            @Html.EditorFor(x => x.Salary)
            <br />
            @Html.ValidationMessageFor(x => x.Salary, "", new { style = "color:red;" })
        </td>
    </tr>
    <tr align="center">
        <td colspan="2"><input type="submit" value="Add Employee" /></td>
    </tr>
</table>
}
