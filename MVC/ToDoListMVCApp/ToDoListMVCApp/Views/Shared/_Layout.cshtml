<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body class="m-3">

    <div>
        <nav class="fixed-top navbar navbar-expand-lg navbar navbar-dark bg-dark">
            @Html.ActionLink("To-Do List", "Index", "Tasks", new { area = "" }, new { @class = "navbar-brand" })
            @if (User.Identity.IsAuthenticated)
            {
                <div align="right">
                    <h3 style="color:red">Welcome @User.Identity.Name</h3>
                </div>

            }
        </nav>
        @if (User.Identity.IsAuthenticated)
        {
            using (Html.BeginForm("Logout", "User"))
            {
                <div align="right">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Logout</button>
                </div>
            }
        }
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
    <div>
        <footer class="card-footer bg-dark" style="margin-top:30px">
            <p class="text-white">&copy; @DateTime.Now.Year - My To-Do List</p>
        </footer>
    </div>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>