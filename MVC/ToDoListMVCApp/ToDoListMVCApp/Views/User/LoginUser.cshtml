@model ToDoListMVCApp.ViewModels.LoginVM

@{
    ViewBag.Title = "Login";
}

<h2 align="center">Login</h2>
<div>
    @using (Html.BeginForm())
    {
        <div class="form-group">
            <label for="username">Username</label>
            @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Username, "", new { style = "color:red" })
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Password, "", new { style = "color:red" })
        </div>
        <div class="form-group form-check">
            @Html.CheckBoxFor(x => x.RememberMe, new { @class = "form-check-input" })
            <label for="rememberme">Remember Me</label>
        </div>
        <div align="center">
            <button type="submit" class="btn btn-outline-primary">Login</button>
        </div>
        <div>
            Don't have an account! @Html.ActionLink("Click Here", "AddUser")
        </div>
    }
</div>

