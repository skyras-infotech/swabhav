@model MVCEntityDemoApp.ViewModels.AddContactVM

<h2 align="center">Add New Contact</h2>
@using (Html.BeginForm())
{
<table cellpadding="10" align="center" border="1">
    <tr>
        <th>Enter First Name :</th>
        <td>
            @Html.EditorFor(x => x.FirstName)
            <br />
            @Html.ValidationMessageFor(x => x.FirstName, "", new { style = "color:red;" })
        </td>
    </tr>
    <tr>
        <th>Enter Last Name :</th>
        <td>
            @Html.EditorFor(x => x.LastName)
            <br />
            @Html.ValidationMessageFor(x => x.LastName, "", new { style = "color:red;" })
        </td>
    </tr>
    <tr>
        <th>Enter Mobile Number :</th>
        <td>
            @Html.EditorFor(x => x.MobileNumber)
            <br />
            @Html.ValidationMessageFor(x => x.MobileNumber, "", new { style = "color:red;" })
        </td>
    </tr>
    <tr>
        <th>Enter Address :</th>
        <td>
            @Html.EditorFor(x => x.Address)
            <br />
            @Html.ValidationMessageFor(x => x.Address, "", new { style = "color:red;" })
        </td>
    </tr>
    <tr align="center">
        <td colspan="2"><input type="submit" value="Add" /></td>
    </tr>
</table>
}