@model AuthenticationAndAuthorizationDemoApp.Models.Employee

<h2 align="center">Employee Login</h2>

@using (Html.BeginForm("Login","Account",FormMethod.Post))
{
    <table cellpadding="10" align="center" border="1">
        <tr>
            <th>Enter Username :</th>
            <td>
                @Html.EditorFor(x => x.Username)<br />
                @Html.ValidationMessageFor(x => x.Username, "", new { style = "color:red" })
            </td>
        </tr>
        <tr>
            <th>Enter Password :</th>
            <td>
                @Html.PasswordFor(x => x.Password)<br />
                @Html.ValidationMessageFor(x => x.Password, "", new { style = "color:red" })
            </td>
        </tr>
        <tr align="center">
            <td colspan="2"><input type="submit" value="Login" /></td>
        </tr>
    </table>
}